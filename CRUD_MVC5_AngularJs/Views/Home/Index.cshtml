<div class="container" ng-controller="funcionarioCtrl">
    <div class="panel panel-info">
        <div class="panel-heading">Funcionários</div>

        <div class="panel-body">
            <button type="button" class="btn btn-info" data-target="#AdicionarFuncionario" data-toggle="modal">
                <span class="glyphicon glyphicon-plus"></span>
            </button>
        </div>

        <table class="table table-bordered center">
            <thead style="background-color: grey;">
                <tr>
                    <th class="text-center">Código Funcionário</th>
                    <th class="text-center">Nome</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">Departamento</th>
                    <th class="text-center">Cargo</th>
                    <th class="text-center">Ação</th>
                </tr>

            </thead>
            <tbody>
                <tr ng-repeat="func in Funcionarios">
                    <td class="text-center">{{func.Id_Funcionario}}</td>
                    <td class="text-center">{{func.Nome}}</td>
                    <td class="text-center">{{func.Email}}</td>
                    <td class="text-center">{{func.Departamento}}</td>
                    <td class="text-center">{{func.Cargo}}</td>
                    <td class="text-center" style="width: 200px">
                        <a href="#" data-target="#AtualizarFuncionario" data-toggle="modal" class="btn btn-success" ng-click="atualizarFuncionarioPorId(func)"><span class="glyphicon glyphicon-pencil"></span></a>
                        <a href="#" data-target="#ExcluirFuncionario" data-toggle="modal" class="btn btn-danger" ng-click="excluirFuncionarioPorId(func)"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    @* Início Modal - Adicionar Funcionário*@

    <div class="modal" id="AdicionarFuncionario" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="text-info">Adicionar Funcionário</h3>
                </div>
                <div class="modal-body" style="margin-left: 10px">
                    <form class="form-horizontal" name="AdicionarNovoFuncionarioForm">
                        <div class="form-group">
                            <input class="form-control" readonly="readonly" name="funcionarioId" type="hidden" placeholder="Código Funcionário" />
                        </div>

                        <div class="form-group">
                            <input class="form-control" type="text" name="nome" ng-model="nome" placeholder="Nome" /> 
                        </div>

                        <div class="form-group">
                            <input class="form-control" type="text" name="email" ng-model="email" placeholder="E-mail" />
                        </div>

                        <div class="form-group">
                            <input class="form-control" type="text" name="departamento" ng-model="departamento" placeholder="Departamento" />
                        </div>

                        <div class="form-group">
                            <input class="form-control" type="text" name="cargo" ng-model="cargo" placeholder="Cargo" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnSalvar" data-dismiss="modal" ng-click="adicionarFuncionario()">Adicionar</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="limparCampos()">Sair</button>
                </div>
            </div>
        </div>
    </div>

    @* Fim Modal - Adicionar Funcionário*@

    @*Início Modal - Atualizar Funcionário*@

    <div class="modal" id="AtualizarFuncionario" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="text-info">Atualizar Funcionário</h3>
                </div>
                <div class="modal-body" style="margin-left: 10px">
                    <form class="form-horizontal" name="AtualizarFuncionarioForm">
                        <div class="form-group">
                            <input class="form-control" readonly="readonly" name="funcionarioId" ng-model="idAtualizado" type="hidden" placeholder="Código Funcionário" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" name="nome" ng-model="nomeAtualizado" placeholder="Nome" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" name="email" ng-model="emailAtualizado" placeholder="E-mail" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" name="departamento" ng-model="departamentoAtualizado" placeholder="Departamento" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" name="cargo" ng-model="cargoAtualizado" placeholder="Cargo" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnAtualizar" data-dismiss="modal" ng-click="atualizarFuncionario()">Atualizar</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Sair</button>
                </div>
            </div>
        </div>
    </div>

    @*Fim Modal - Atualizar Funcionário*@

    @*Início Modal - Excluir Funcionário*@

    <div class="modal" id="ExcluirFuncionario" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="text-info">Deseja realmente excluir o funcionário?</h3>
                </div>
                <div class="modal-body" style="margin-left: 10px">
                    <div>
                        <p>Id Funcionário: {{idAtualizado}}</p>
                        <p>Nome: {{nomeAtualizado}}</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="excluirFuncionario(idAtualizado)">Excluir</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Sair</button>
                </div>
            </div>
        </div>
    </div>

    @*Fim Modal - Excluir Funcionário*@

</div>

@section scripts{
    <script src="~/AngularJsApp/Funcionario/Module.js"></script>
    <script src="~/AngularJsApp/Funcionario/Service.js"></script>
    <script src="~/AngularJsApp/Funcionario/Controller.js"></script>
}